{
	"dependencies": {
		"@tailwindcss/typography": "^0.5.2",
		"tailwindcss": "^3.2.1"
	},
	"devDependencies": {
		"concurrently": "^7.4.0",
		"npm-watch": "^0.11.0"
	},
	"watch": {
		"publish:build": {
			"patterns": [
				"Content",
				"Resources",
				"Sources/MarkInsideWebsite"
			],
			"extensions": "*",
			"delay": 2500
		}
	},
	"scripts": {
		"publish:watch": "npm-watch publish:build",
		"publish:build": "publish generate",
		"publish:run": "publish run",
		"tailwind:watch": "npx tailwindcss build -i ./Styles/theme.css -o ./Resources/styles.css -c ./Styles/tailwind.config.js --watch",
		"dev": "concurrently --kill-others -n publish,tailwind \"pnpm publish:watch\" \"pnpm tailwind:watch\""
	}
}
